<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
<h1><b>bem vinda à <br> nova coleção <br> Luiza Barcelos<b></h1>

<div class="inputs" style="padding-left: 8px;">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.input :email,
     label: 'email',
                required: false,

                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
     label: 'senha',
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= button_tag "INICIAR SESSÃO", class: "button", role: "button", data: { disable_with: "<i class='fas fa-spinner fa-spin'></i>".html_safe} %>

  </div>
<% end %>
</div>
<br>
<hr>
<h4 style="margin-bottom: 14px; margin-top: 14px;">esqueceu sua senha e quer gerar uma nova entrada?</h4>
<%= link_to "nova entrada!", new_registration_path(resource_name), class: "botao4" %>

</div>
</div>
</div>


