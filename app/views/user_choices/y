body {
  font-family: sans-serif;
}

.photoPicker {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.photoPicker input[type="checkbox"] {
  display: none;
}

.photoPicker label {
  display: block;
}

.photoPicker input[type="checkbox"] + label {
  margin: 1rem;
  width: 300px;
  height: 300px;
  border-radius: 4px;
  overflow: hidden;
  position: relative; // sem isso aqui o coração vai ficar deslocado
}

.photoPicker input[type="checkbox"] + label img {
  height: 100%;
  width: 100%;
  object-fit: cover;
  transition: 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.photoPicker input[type="checkbox"]:checked + label {
  background: black;
}

.photoPicker input[type="checkbox"]:checked + label img {
  transform: scale(1.1);
  opacity: 0.3;
}

.photoPicker input[type="checkbox"]:checked + label:before {
  height: 4rem;
  width: 4rem;
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
}
